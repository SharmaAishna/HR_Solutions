<EditForm Model="@FormLeavesTypes" OnValidSubmit="@OnValidSubmit">
<DataAnnotationsValidator/>
<ValidationSummary/>

<fieldset disabled="@Disabled">
    <div class="form-group">
        <label>Name:</label>
        <div>
                <InputText @bind-Value=@FormLeavesTypes.Name class="form-control" />
                <ValidationMessage For="@(()=>FormLeavesTypes.Name)" />
        </div>
    </div>
    <div class="form-group">
        <label>Default Days:</label>
        <div>
                <InputNumber @bind-Value="@FormLeavesTypes.DefaultDays" class="form-control" />
                <ValidationMessage For="@(()=>FormLeavesTypes.DefaultDays)" />
        </div>

    </div>
</fieldset>
@if(!Disabled)
{
    <button type="submit" class="btn-link btn-success btn-block">
        @ButtonText
    </button>
}
<BackToList Target="FormLeavesTypes"/>
</EditForm>

