@page "/"

<PageTitle>Leave Management</PageTitle>
<h1 class=" text-center"> Welcome to Hr Leave Management System </h1>
<br />
<br />

<AuthorizeView>
    <Authorized>
        <button class="btn btn-danger" @onclick="Logout">Logout</button>
    </Authorized>
    <NotAuthorized>
        <button class="btn-link btn-success" @onclick="GoToLogin">Login</button>
        <button class="btn-link btn-primary" @onclick="GoToRegister">Register</button>

    </NotAuthorized>
</AuthorizeView>

